@model FerragensOnline.Models.Vendedor

@{
    ViewData["Title"] = "Delete";
}
    <div class="container border col-11 rounded" style="background-color:ghostwhite">
        <br />
        <h2 class="text-center">Delete</h2>
        <br />
        <div class="col text-center"><h4 class="btn btn-warning">Tem certeza que deseja excluir este usuário?</h4></div>

@model FerragensOnline.Models.Vendedor

@{
    ViewData["Title"] = "Edit";
}
    <div class="container border col-6 rounded" style="background-color:ghostwhite">
        <br />
        <h2 class="text-center">Edit</h2>
        <hr />
        <div class="col"><h4 class="btn btn-secondary text-center">Vendedor:</h4></div>
   
        <div class="col">
            <div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Usuario" class="control-label"></label>
                        <input asp-for="Usuario" class="form-control" />
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Senha" class="control-label"></label>
                        <input asp-for="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <br />
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index"> <h6 class="font-weight-bold" style="color:darkcyan"><img src="~/img/lista.png" /> Back to List </h6></a>
        </div>
        <br />
    </div>
<br />
<br />
<br />
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
